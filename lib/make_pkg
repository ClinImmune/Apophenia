export junkdir=delete_me
export version=0.12

rm -rf $junkdir
mkdir $junkdir
cp * $junkdir
cd $junkdir
	libtoolize
	aclocal
	autoconf
	automake -a
	cp *.c *.h *.html ../wn/wn*{c,h} configure.ac config.guess missing ltmain.sh install-sh config.sub configure Makefile.in Makefile.am INSTALL NEWS README COPYING AUTHORS ChangeLog depcomp test_* flake.gif ../.doxygen ./
	./configure
	make dist

	#I have header issues.
	mkdir apophenia
	cd apophenia
		ln -s ../*.h ./
		cd ..
	mkdir apophenia-$version
	mv apophenia apophenia-$version
	gzip -d apophenia-$version.tar.gz
	tar rf apophenia-$version.tar apophenia-$version
	gzip apophenia-$version.tar
	mv apophenia-$version/* ./
	rmdir apophenia-$version

	mv apophenia-$version.tar.gz ../
	cd ..
tar xvz < apophenia-$version.tar.gz
echo "***********Done with packing; now compiling***********"
cd apophenia-$version
	./configure; make; sudo make install
cd ..
