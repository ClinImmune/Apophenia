export outlib=apophenia_install
export junkdir=tttt

rm -rf $outlib
rm -rf $junkdir
mkdir $junkdir
cp * $junkdir
cd $junkdir
	libtoolize
	aclocal
	autoconf
	automake -a
	mkdir $outlib
	cp *.c *.h *.texi *.tex configure.ac config.guess missing ltmain.sh install-sh config.sub configure Makefile.in Makefile.am INSTALL NEWS README COPYING AUTHORS ChangeLog depcomp $outlib 
	mv $outlib ..
cd ..
rm -rf $junkdir
cd $outlib
	mkdir apophenia
	cd apophenia
		ln -s ../*.h ./
cd ../..
tar czf apophenia.tgz $outlib
cd $outlib
echo "***********Done with packing; now compiling***********"
./configure; make; sudo -s  "make install"
cd ..
