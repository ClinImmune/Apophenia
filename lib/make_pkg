export outlib=apophenia_install
export junkdir=tttt

rm -rf $outlib
rm -rf $junkdir
mkdir $junkdir
cp * $junkdir
cd $junkdir
	libtoolize
	aclocal
	autoconf
	automake -a
	mkdir $outlib
	cp *.c *.h *.html ../wn/wn*{c,h} configure.ac config.guess missing ltmain.sh install-sh config.sub configure Makefile.in Makefile.am INSTALL NEWS README COPYING AUTHORS ChangeLog depcomp test_* flake.gif ../.doxygen $outlib 
	mv $outlib ..
cd ..
rm -rf $junkdir
cd $outlib
	mkdir apophenia
	cd apophenia
		ln -s ../*.h ./
	cd ..
	./configure
	make dist
echo "***********Done with packing; now compiling***********"
	make; sudo make install
cd ..
